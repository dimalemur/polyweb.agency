#about,
#services,
#contacts {
  background:var(--white-bg-color);
}

.about_us {
  background:var(--black-bg-color);
  border: 0px solid var(--white-bg-color);
}

.left {
  p {
    &:nth-child(1) {
      color: #b0b0b0;
    }
    &:nth-child(3) {
      color:var(--black-bg-color);
    }
    &:nth-child(4) {
      color: #b0b0b0;
    }
    &:nth-child(6) {
      color:var(--black-bg-color);
    }
  }
}


.loader {
    border-bottom: 10px solid var(--black-bg-color);
    border-right: 10px solid var(--black-bg-color);
    border-left: 10px solid var(--black-bg-color);
  }

.checkbox {
  color:var(--black-bg-color);
  color:var(--black-bg-color);
  &:checked + .fake-checkbox {
    color: var(--black-bg-color);
  }
}

.fake-checkbox {
  border: 2px solid var(--black-bg-color);
}

